<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?attr/buttonRippleColor">
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="?attr/buttonPressedColor" />
                    <corners android:radius="@dimen/button_corners" />
                </shape>
            </item>
            <item android:state_focused="true">
                <shape android:shape="rectangle">
                    <solid android:color="?attr/buttonFocusedColor" />
                    <corners android:radius="@dimen/button_corners" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="?attr/buttonNormalColor" />
                    <corners android:radius="@dimen/button_corners" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>