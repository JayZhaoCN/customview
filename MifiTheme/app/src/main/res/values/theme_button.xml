<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--每个控件theme都不能直接从根这一层继承，如果继承了将使用系统的样式-->

    <style name="Button" parent="@android:style/Widget.Holo.Button" />


    <style name="Button.Normal">
        <item name="android:textColor">?attr/textSecondaryLightColor</item>
        <item name="android:textSize">?attr/textSizeNormal</item>
        <item name="android:background">?attr/buttonBackGround</item>
        <!--<item name="android:background">@drawable/button_normal_background</item>-->
    </style>

    <style name="Button.NormalReverse">
        <item name="android:textColor">?attr/textSecondaryColor</item>
        <item name="android:textSize">?attr/textSizeNormal</item>
        <item name="android:background">?attr/buttonReverseBackGround</item>
    </style>

    <style name="Button.Large">
        <item name="android:textColor">?attr/textPrimaryColor</item>
        <item name="android:textSize">?attr/textSizeLarge</item>
        <item name="android:background">?attr/buttonBackGround</item>
    </style>

    <style name="Button.Small">
        <item name="android:textColor">?attr/textPrimaryColor</item>
        <item name="android:textSize">?attr/textSizeSmall</item>
        <item name="android:background">?attr/textPrimaryBackGround</item>
    </style>

    <style name="Button.Circle">
        <item name="android:textColor">?attr/textPrimaryColor</item>
        <item name="android:textSize">?attr/textSizeXXXLarge</item>
        <item name="android:background">?attr/textPrimaryLightBackGround</item>
    </style>

</resources>