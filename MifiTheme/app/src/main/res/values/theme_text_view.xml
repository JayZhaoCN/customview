<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--每个控件theme都不能直接从根这一层继承，如果继承了将使用系统的样式-->

    <style name="TextView" parent="@android:style/Widget.Holo.TextView" />

    <style name="TextView.TitleText">
        <item name="android:textColor">?attr/textPrimaryColor</item>
        <item name="android:textSize">?attr/textSizeLarge</item>
        <item name="android:background">?attr/textPrimaryBackGround</item>
    </style>

    <style name="TextView.ContentText">
        <item name="android:textColor">?attr/textSecondaryLightColor</item>
        <item name="android:textSize">?attr/textSizeNormal</item>
        <item name="android:background">?attr/textPrimaryDarkBackGround</item>
    </style>
</resources>