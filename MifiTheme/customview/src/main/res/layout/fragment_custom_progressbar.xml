<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <Spinner
        android:entries="@array/custom_progressbar_styles"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/style_spinner" />

    <Spinner
        android:entries="@array/custom_progressbar_types"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/type_spinner" />

    <com.jay.customview.widgets.CustomProgressBar
        android:layout_marginTop="80dp"
        android:layout_marginStart="40dp"
        android:id="@+id/custom_progressbar"
        app:progress_height="10dp"
        app:seek_radius="9dp"
        app:type="movable"
        app:style="multi_color"
        app:single_progress_color="@color/sleep_bg"
        app:max_progress="180"
        app:min_progress="10"
        app:progress="100"
        app:gradual_start_color="@color/personinfo_color_yellow"
        app:gradual_end_color="@color/bg_color_red_dark"
        app:transparent_color="@color/white_100_percent"
        app:seek_color="@color/bg_color_steps"
        app:seek_color_changeable="true"
        android:layout_width="280dp"
        android:layout_height="wrap_content" />

</LinearLayout>