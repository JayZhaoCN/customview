<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_steps_gray"
    >

    <TextView
        android:text="@string/code_selector_tint"
        android:id="@+id/image1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageView
        android:clickable="true"
        android:layout_margin="10dp"
        android:id="@+id/image1"
        android:src="@drawable/step_new_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/xml_selector_tint"
        android:id="@+id/image2_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:clickable="true"
        android:tint="@color/icon"
        android:layout_margin="10dp"
        android:id="@+id/image2"
        android:src="@drawable/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>